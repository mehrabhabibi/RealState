{
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/*.dll": true,
        "**/*.pdb": true,
        "**/Properties": true  // Example: Hides the Properties folder
    },
    "search.exclude": {
        "**/bin": true,
        "**/obj": true
    },
    "explorer.excludeGitIgnore": true,  // Respects .gitignore rules
    "git.showUntrackedFiles": "none"  // Hides untracked files
}